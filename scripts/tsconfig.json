{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../dist/scripts",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "../src/*": ["../src/*"]
    }
  },
  "include": [
    "./**/*",
    "../src/lib/supabaseClient.ts"
  ],
  "exclude": ["../node_modules"]
} 